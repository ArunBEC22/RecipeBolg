<style>
 /* Overall form style */
.forgot-password-form {
  background: #f7f7f7;
  padding: 30px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  max-width: 500px;
  margin: auto;
  animation: fadeIn 1s ease-out;
}

/* Input field styles */
.form-input {
  transition: all 0.3s ease;
  border-radius: 8px;
}

.form-input:focus {
  border-color: #0056b3;
  box-shadow: 0 0 5px rgba(0, 86, 179, 0.5);
}

/* Button styling */
.btn-submit {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  font-size: 16px;
  transition: all 0.3s ease;
}

.btn-submit:hover {
  background-color: #0056b3;
  transform: scale(1.05);
}

/* Responsive and styling the form */
@media (max-width: 767px) {
  .forgot-password-form {
    padding: 20px;
  }

  .form-label {
    font-size: 14px;
  }

  .form-input {
    font-size: 14px;
  }

  .btn-submit {
    font-size: 14px;
  }
}

/* Animation effects */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceIn {
  0% {
    transform: scale(0.7);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(1);
  }
}

</style>


<form action="/forgot-password" method="POST" class="forgot-password-form">
    <div class="form-group mb-4">
      <label for="email" class="form-label">Enter your registered email</label>
      <input type="email" id="email" name="email" class="form-control form-input" required placeholder="Your email address" />
    </div>
  
    <% if (error) { %>
      <div class="alert alert-danger animated bounceIn">
        <%= error %>
      </div>
    <% } %>
  
    <button type="submit" class="btn btn-primary btn-submit">Send OTP</button>
  </form>
  
  