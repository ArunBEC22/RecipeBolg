<style>
    /* General Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    h1, h2 {
        color: #343a40;
        text-align: center;
        font-weight: bold;
    }

    p {
        color: #6c757d;
        text-align: center;
    }

    a {
        text-decoration: none;
    }

    .breadcrumb {
        justify-content: center;
        background-color: transparent;
        padding: 0;
        margin-bottom: 1rem;
    }

    .breadcrumb-item a {
        color: #007bff;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    .diet-type-section {
        margin-top: 2rem;
    }

    .category_link {
        text-decoration: none;
        color: inherit;
    }

    .category_img {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .category_img img {
        width: 100%;
        height: auto;
    }

    .category_img:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    }

    .row {
        justify-content: center;
    }

    .pt-1 {
        text-align: center;
        font-weight: bold;
        color: #343a40;
    }
</style>

<h1 class="pb-4">Explore through Diet plans</h1>

<% if (recipeGroups.length > 0) { %>
    <% recipeGroups.forEach(function(group, index) { %>
        <div class="diet-type-section">
            <h2 class="pt-4"><%= group._id %></h2> <!-- Display the diet type name -->

            <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
                <% group.recipes.forEach(function(recipeItem) { %>
                    <a href="/recipe/<%= recipeItem._id %>" class="col text-center category_link">
                        <div class="category_img category_img--large shadow">
                            <img src="/uploads/<%= recipeItem.image %>" alt="<%= recipeItem.name %>" loading="lazy">
                        </div>
                        <div class="pt-1">
                            <%= recipeItem.name %>
                        </div>
                    </a>
                <% }) %>
            </div>
        </div>
    <% }) %>
<% } else { %>
    <p>No recipes found.</p>
<% } %>
