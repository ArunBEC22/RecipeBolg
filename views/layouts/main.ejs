    <style>
        /* Updated Navbar Styling */
        .navbar {
            width: 100%; /* Occupy full width of the screen */
            background: linear-gradient(to right, #f8f9fa, #e9ecef); /* Light gradient background */
            border-bottom: 2px solid #dee2e6;
            position: relative;
            z-index: 10;
        }
        
        .navbar-brand {
            font-family: 'Rubik', sans-serif;
            font-weight: bold;
            font-size: 1.5rem;
            color: #007bff !important;
        }
        
        .navbar-brand:hover {
            color: #0056b3 !important;
            text-decoration: none;
        }
        
        .nav-link {
            font-family: 'Lato', sans-serif;
            font-weight: 500;
            color: #495057 !important;
            padding: 10px;
            transition: color 0.3s ease, background-color 0.3s ease;
        }
        
        .nav-link:hover {
            color: #007bff !important;
            background-color: rgba(0, 123, 255, 0.1);
            border-radius: 5px;
        }
        
        .navbar-toggler {
            border: none;
            padding: 8px;
            background-color: #e9ecef;
            border-radius: 5px;
        }
        
        .navbar-toggler:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }
        
        .navbar-toggler-icon {
            font-size: 1.5rem;
            color: #007bff;
        }
        
        .form-control {
            border-radius: 20px;
            border: 1px solid #ced4da;
            padding: 10px;
            font-size: 0.9rem;
        }
        
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
        
        .btn-outline-success {
            border-radius: 20px;
            color: #fff;
            background-color: #28a745;
            border: none;
            transition: background-color 0.3s ease;
        }
        
        .btn-outline-success:hover {
            background-color: #218838;
        }
        
        /* Ensure navbar content is centered */
        .navbar .container-fluid {
            max-width: 100%;
            padding-left: 2rem;
            padding-right: 2rem;
        }
        /* Footer Styling */
.custom-footer {
    background: linear-gradient(to right, #f8f9fa, #e9ecef); /* Light gradient background */
    border-top: 2px solid #dee2e6;
    color: #495057;
    font-family: 'Lato', sans-serif;
    padding-top: 20px;
}

.custom-footer p {
    margin: 0;
    font-size: 0.9rem;
}

.custom-footer a {
    text-decoration: none;
    transition: transform 0.3s ease, color 0.3s ease;
}

.custom-footer a:hover {
    transform: translateY(-3px); /* Smooth upward hover effect */
}

.custom-footer i {
    font-size: 1.5rem; /* Reduced icon size */
    transition: transform 0.3s ease, color 0.3s ease;
}

.custom-footer .social-icons a {
    margin: 0 10px;
    color: inherit; /* Default color inherits from text classes */
}

.custom-footer .social-icons a:hover {
    transform: scale(1.2); /* Slightly enlarges icons on hover */
    color: #ff5722; /* Adds a distinct highlight color on hover */
}

/* Upper Links Styling (for navbar and other links) */
.navbar .nav-link,
.navbar-brand {
    transition: color 0.3s ease, background-color 0.3s ease;
}

.navbar .nav-link:hover,
.navbar-brand:hover {
    color: #ff5722 !important; /* Highlight color on hover */
    background-color: rgba(255, 87, 34, 0.1); /* Subtle background shading */
    border-radius: 5px; /* Rounded edges for the hover effect */
}

.btn-outline-success:hover {
    background-color: #ff5722 !important; /* Matches the hover theme */
    border-color: #ff5722;
}

.form-control:focus {
    border-color: #ff5722;
    box-shadow: 0 0 5px rgba(255, 87, 34, 0.5);
}
.logo{
    height: 60px;
    width: 60px;
}

@media (max-width: 576px) {
    .logo {
        height: 65px; /* Adjust height for mobile */
        width: 65px;  /* Adjust width for mobile */
    }
}

.navbar-toggler:focus {
    background-color: #f8f9fa; 
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); 
}



        </style>
        
        
